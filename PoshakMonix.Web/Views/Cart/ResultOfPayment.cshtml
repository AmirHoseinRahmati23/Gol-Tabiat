
@{
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/tailwind.css" />
    <title>تیجه پرداخت</title>
</head>
<body>
    <div class="site z-0 flex flex-col h-full">
        <div class="z-20 register-form py-10 mx-auto w-11/12 sm:w-5/12 rounded-2xl shadow-lg bg-gray-100">
            @if (ViewBag.IsSuccess)
            {
                <h2 class=" text-green-900 text-2xl font-bold text-center">پرداخت با موفقیت انجام شد، کد پیگیری : @ViewBag.RefId</h2>
            }
            else
            {
                <h2 class=" text-red-900 text-2xl font-bold text-center">پرداخت با شکست مواجه شد </h2>
            }

        </div>
        <div class="red-back z-10"></div>
    </div>
</body>
</html>