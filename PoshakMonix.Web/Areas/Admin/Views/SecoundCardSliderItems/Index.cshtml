@model IEnumerable<SecooundCardSliderItem>

@{
    ViewData["Title"] = "آیتم های اسلایدر کارت دوم";
}

<h2>آیتم های اسلایدر کارت دوم</h2>


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">کارت های کارت اسلایدر دوم</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item active"> <a asp-action="Index" asp-controller="Home" asp-area="Admin">مدیریت</a> </li>
                        <li class="breadcrumb-item active">کارت های کارت اسلایدر دوم</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <section class="container-fluid">
        <div class="row">
            <p>
                <a asp-action="Add" class="btn btn-success">افزودن</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            محصولات
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Product.ProductName
                            </td>
                            <td>
                                <form asp-action="Delete" method="post">
                                    <input type="hidden" value="@item.Id" name="id" />
                                    <input type="submit" value="حذف" class="btn btn-danger" />
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>