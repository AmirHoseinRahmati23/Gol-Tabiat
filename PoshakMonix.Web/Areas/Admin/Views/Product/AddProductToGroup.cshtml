@model PoshakMonix.Web.Areas.Admin.Models.AddProductToGroupViewModel

@{
    ViewData["Title"] = "اضافه کردن محصول به گروه";
}





<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">افزودن محصول</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item active"> <a asp-action="Index" asp-controller="Home" asp-area="Admin">مدیریت</a> </li>
                        <li class="breadcrumb-item active">افزودن محصول</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <section class="container-fluid">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="AddProductToGroup">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Product.ProductName" class="control-label"></label>
                        <input readonly value="@Model.Product.ProductName" class="form-control" />
                    </div>

                    <input type="hidden" asp-for="Product.Id" />

                    @{
                        var items = new SelectList(Model.Groups, "Id", "Name");
                    }
                    <select name="groupId" asp-items="items"></select>
                    <div class="form-group">
                        <input type="submit" value="ذخیره" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">بازگشت</a>
        </div>

    </section>
</div>